
<div style="min-width:600px">
	<EditForm Model="@Task" OnValidSubmit="@HandleValidSubmit">

		<DataAnnotationsValidator />
		<ValidationSummary />
		<div class="form-group row">
			<label for="title" class="col-sm-3">Title: </label>
			<InputText id="title" class="form-control border border-warning col-sm-8" @bind-Value="@Task.Title" placeholder="Enter title"></InputText>
		</div>
		<div class="form-group row">
			<label for="Description" class="col-sm-3">Description: </label>
			<InputTextArea rows="5" id="Description" class="form-control border border-warning col-sm-8" @bind-Value="@Task.Description" placeholder="Enter Description"></InputTextArea>
		</div>

		<div class="form-group row">
			<label for="taskStatus" class="col-sm-3">Status: </label>
			<InputSelect id="taskStatus" class="form-control border border-warning col-sm-8" @bind-Value=@Task.Status>
				<option value="@(MSPApplication.Shared.HRTaskStatus.Open)">Open</option>
				<option value="@(MSPApplication.Shared.HRTaskStatus.InProgress)">In Progress</option>
				<option value="@(MSPApplication.Shared.HRTaskStatus.Assigned)">Assigned</option>
				<option value="@(MSPApplication.Shared.HRTaskStatus.Blocked)">Blocked</option>
				<option value="@(MSPApplication.Shared.HRTaskStatus.Complete)">Complete</option>
			</InputSelect>
		</div>

		<div class="form-group row">
			<label for="employee" class="col-sm-3">Assigned to: </label>
			<InputSelect id="employee" class="form-control col-sm-8" @bind-Value="@EmployeeId">
				<option value="">-</option>
				@foreach (var employee in Employees)
				{
					<option value="@employee.EmployeeId">@employee.FirstName</option>
				}
			</InputSelect>
		</div>

		<button type="submit" class="btn btn-primary">Save Task</button>
		<a class="btn btn-outline-primary" @onclick="@Close">Close</a>
	</EditForm>
</div>

