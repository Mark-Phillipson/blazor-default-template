
<div class="dialog-title">
    <h2>@Title</h2>
</div>
<form class="dialog-body">
    <img alt="Question Mark" style="float:right" src="images/Help.png" />
    <div class="font-weight-bold">
        @Message
    </div>
</form>
<div class="dialog-footer">
    <div class="dialog-buttons">
        <button accesskey="n" class="btn btn-secondary btn-lg mr-auto" @onclick="@OnCancel">Ca<u>n</u>cel</button>
        <button accesskey="m" class="btn btn-@ButtonColour btn-lg ml-auto" @onclick="@OnConfirm">Confir<u>m</u></button>
    </div>
</div>
@code { [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public string Title { get; set; } = "Confirmation Required";
    [Parameter] public string Message { get; set; }
    [Parameter] public string ButtonColour { get; set; } = "danger"; }
